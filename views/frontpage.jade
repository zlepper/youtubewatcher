ul(infinite-scroll='loadMore()', infinite-scroll-distance="0.3", infinite-scroll-disabled="outOfData",infinite-scroll-listen-for-event="search:changed").channel-grid
  li(ng-repeat="video in videos|filter:$parent.search track by $index").channel-content-item
    .picture(title="{{video.description}}")
      img(ng-src="{{video.image}}")
      span {{video.duration}}
      .content-caption
        a
          h3 {{video.title}}
        .meta
          ul
            li Published at {{video.publishedAt.valueOf() | date:'shortDate' }}
