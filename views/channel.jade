ul(infinite-scroll='loadMore()', infinite-scroll-distance="1", infinite-scroll-disabled="outOfData",infinite-scroll-listen-for-event="search:changed").channel-list
  li(ng-repeat="video in videos|filter:$parent.search track by $index").channel-content-item.clearfix
    a(ui-sref=".video({id: video.id})")
      figure
        img(ng-src="{{video.image}}")
        figcaption: span {{video.duration}}
    .content-caption
      a(ui-sref=".video({id: video.id})")
        h3 {{video.title}}
      .meta
        span.published Published at {{video.publishedAt.valueOf() | date:'shortDate' }}
        span.description {{video.description.slice(0,300)}}...

div(ui-view="", ng-class="{hidden: playerHidden}").player