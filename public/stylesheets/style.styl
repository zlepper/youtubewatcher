body
  font-family Roboto, arial, sans-serif

ul.channel-grid
  padding 0
  list-style none
  display: flex
  flex-wrap wrap
  justify-content space-around
  align-content space-around
  flex-direction row
  li.channel-content-item
    margin-right 1em
    margin-bottom 1em
    width 185px
    height auto

    .picture
      span
        right 0.25em
        top -1.5em
        background-color black
        color white
        position relative
        float right
        font-weight bold

    .content-caption
      h3
        margin-top 0
        margin-bottom 0
        margin-left: 0.2em
        font-size 1.2em
        font-weight bold

      .meta
        font-size: 0.8em
        li:nth(1)
          text-align: right

    img
      height: auto
      width: 100%
  ul
    list-style none
    padding 0